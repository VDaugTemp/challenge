{
    "version": 2,
    "builds": [
      { 
        "src": "frontend/package.json", 
        "use": "@vercel/next",
        "config": {
          "env": {
            "NEXT_PUBLIC_API_URL": "@api-url"
          }
        }
      },
      { 
        "src": "api/app.py",
        "use": "@vercel/python",
        "config": {
          "env": {
            "OPENAI_API_KEY": "@openai-api-key"
          }
        }
      }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "api/app.py"
      },
      { 
        "src": "/(.*)", 
        "dest": "frontend/$1"
      }
    ],
    "env": {
      "OPENAI_API_KEY": "@openai-api-key"
    }
  } 